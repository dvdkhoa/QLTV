@page "/dangnhap"
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

@section styles {
    <!-- Font Icon -->
    <link rel="stylesheet" href="./templates/login/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="./templates/login/css/style.css">
    <style>
        h2,button,a,input,li {
            font-family: 'Times New Roman'
        }
    </style>
}

<!-- Sing in  Form -->
<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="/templates/login/images/signin-image.jpg" alt="sing up image"></figure>
                
                <p class="signup-image-link">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng ký tài khoản mới</a>
                </p>
            </div>

            <div class="signin-form">
                <h2 class="form-title" style="font-family: 'Times New Roman', Times, serif">Đăng nhập</h2>
                <form method="POST" class="register-form" id="login-form" asp-route-returnUrl="@Model.ReturnUrl">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.UserName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Input.UserName" placeholder="Nhập tên tài khoản" style="font-family: 'Times New Roman', Times, serif" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password" class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Input.Password" placeholder="Nhập mật khẩu" style="font-family: 'Times New Roman', Times, serif" />
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.RememberMe" class="agree-term" />
                        <label asp-for="Input.RememberMe" class="label-agree-term"><span><span></span></span>Remember me</label>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit" value="Đăng nhập" />
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>
                        </p>
                        
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Gửi lại mã xác thực</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


