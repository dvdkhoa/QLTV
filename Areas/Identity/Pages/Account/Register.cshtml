@page "/dangky"
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}
@section styles {
    <!-- Font Icon -->
    <link rel="stylesheet" href="./templates/login/fonts/material-icon/css/material-design-iconic-font.min.css">
    <!-- Main css -->
    <link rel="stylesheet" href="./templates/login/css/style.css">
    <style>
        a,h2,button,input {
            font-family: 'Times New Roman'
        }
    </style>
}

<!-- Sign up form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Đăng ký</h2>
                <form method="POST" class="register-form" id="register-form" asp-route-returnUrl="@Model.ReturnUrl">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.UserName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Input.UserName" placeholder="Nhập tên đăng nhập" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="Input.Email" placeholder="Nhập Email" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Input.Password" placeholder="Nhập mật khẩu" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="Input.ConfirmPassword" placeholder="Nhập lại mật khẩu" />
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Đăng ký" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/templates/login/images/signup-image.jpg" alt="sing up image"></figure>
                <p class="signup-image-link">
                    <a href="./DangNhap" >Đã có tài khoản</a> 
                </p>
            </div>
        </div>
    </div>
</section>



@section Scripts {

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="js/main.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
