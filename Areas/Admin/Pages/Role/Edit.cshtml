@page "/admin/role/edit-role/{roleId}"
@model QLTV.AppMVC.Areas.Admin.Pages.Role.EditModel
@{
    ViewData["title"] = "Sửa thông tin vai trò";
}

<h2>@ViewData["title"]</h2>
<hr />
<div class="row">
    <div class="col-2"></div>
    <div class="col-4">
        <form asp-page="Edit" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label class="control-label">Tên vai trò</label>
                <input class="form-control" asp-for="@Model.Input.RoleName" />
            </div>
            <div class="form-group">
                <input class="btn btn-success" type="submit" value="Sửa" />
            </div>
        </form>
    </div>
    <div class="col-6"></div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}