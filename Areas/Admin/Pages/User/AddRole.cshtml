@page
@model AddRoleModel
@{
    ViewData["Title"] = "Thiết lập mật khẩu";
    ViewData["page"] = "Tài khoản";

}
<partial name="_StatusMessage" for="StatusMessage" />

<h4>Thiệt lập vai trò(Role) cho: <span class="font-weight-bold">@Model.user.UserName</span></h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleNames"></label>
                @Html.ListBoxFor(m => m.RoleNames, Model.allRoles,
                new { id= "select-role", @class="w-100" })
            </div>
            <button type="submit" class="btn btn-primary float-right">Đồng ý</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link href="~/lib/multiple-select/multiple-select.min.css" rel="stylesheet" />
    <script>
        $("#select-role").multipleSelect({
            selectAll: false,
            keepOpen: false,
            isOpen: false,
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}