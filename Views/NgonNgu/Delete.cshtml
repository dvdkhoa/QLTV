@model QLTV.AppMVC.Models.Entities.NgonNgu

@{
    ViewData["Title"] = "Xóa ngôn ngữ";
    ViewData["page"] = "Ngôn ngữ";
}

@{
    if (TempData.ContainsKey("StatusMessage"))
    {
        var model = TempData["StatusMessage"].ToString();
        await Html.RenderPartialAsync("_StatusMessage", model);
    }
}


<div class="col-md-8 offset-md-2">
    <h2>Bạn có chắc chắn muốn xóa?</h2>
    <hr />
    <p>Ngôn ngữ: <strong>@Model.TenNN</strong></p>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index">Trở về danh sách</a> |
        <input type="submit" value="Xóa" class="btn btn-danger" />
    </form>
</div>
