@model QLTV.AppMVC.Models.Entities.Khoa

@{
    ViewData["Title"] = "Cập nhật thông tin khoa";
    ViewData["page"] = "Khoa";
}

<h3>@ViewData["Title"] </h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MaKhoa" class="control-label"></label>
                <input asp-for="MaKhoa" class="form-control" />
                <span asp-validation-for="MaKhoa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenKhoa" class="control-label"></label>
                <input asp-for="TenKhoa" class="form-control" />
                <span asp-validation-for="TenKhoa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
