@model QLTV.AppMVC.Models.Entities.NXB

@{
    ViewData["Title"] = "Xóa NXB";
    ViewData["page"] = "NXB";
}

@{
    if (TempData.ContainsKey("StatusMessage"))
    {
        var model = TempData["StatusMessage"].ToString();
        await Html.RenderPartialAsync("_StatusMessage", model);
    }
}


<div class="col-md-8 offset-md-2">
    <h3>Bạn có chắc chắn muốn xóa?</h3>
    <hr />
    <p>Nhà xuất bản: <strong>@Model.TenNXB</strong></p>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index">Trở về danh sách</a> |
        <input type="submit" value="Xóa" class="btn btn-danger" />
    </form>
</div>
