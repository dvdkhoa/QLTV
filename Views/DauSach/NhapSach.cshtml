@model QLTV.AppMVC.Models.Entities.DauSach

@{ 
    ViewData["title"] = "Nhập sách";
    ViewData["page"] = "Sách";
}

<h2 class="text-center">@ViewData["title"]</h2>
<hr />

<div class="row">
    <div class="col-1"></div>
    <div class="col-10 row">
        <div class="col-6">
            <p>Tên sách: <strong class="font-weight-bolder">@Model.TenDauSach</strong></p>
            <hp>Số lượng hiện tại: <span class="font-weight-bold">@Model.SL</span></hp>
            <hr />
            <a asp-action="Edit" asp-route-id="@Model.Id">Về trang chỉnh sửa</a>
        </div>
        <div class="col-6">
            <form asp-action="NhapSach" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="form-group">
                    <label class="control-label">Số lượng muốn thêm:</label>
                    <input class="form-control" type="number" name="SL" value="" required />
                </div>
                <div class="form-group">
                    <input class="btn btn-success  float-right" type="submit" value="Đồng ý" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-1"></div>
</div>


