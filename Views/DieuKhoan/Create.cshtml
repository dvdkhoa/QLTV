@model QLTV.AppMVC.Models.Entities.DieuKhoan

@{ 
    ViewData["title"] = "Thêm điều khoản";
    ViewData["page"] = "Điều khoản";
}

    <h1>Thêm điều khoản</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class=" form-group">
        <label class="control-label">Số lượng sách có thể mượn:</label>
        <input type="text" asp-for="SLSach" class="form-control" />
    </div>
    <div class=" form-group">
        <label class="control-label">Thời hạn mượn tối đa:</label>
        <input type="text" asp-for="ThoiHan" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Đồng ý" class="btn btn-success" />
    </div>
</form>