<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="/templates/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="/templates/assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewData["title"]</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" rel="stylesheet" />

    <!-- CSS Files -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/templates/assets/css/light-bootstrap-dashboard.css?v=2.0.0 " rel="stylesheet" />
    <style>
        a {
            color: #007bff;
        }
        .nav .nav-item .nav-link.active:hover {
            background-color: #007bff;
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-image="/templates/assets/img/hinh.jpg" data-color="@(this.User.IsInRole("Admin")?"red":"blue")">
            <!--
                Tip 1: You can change the color of the sidebar using: data-color="purple | blue | green | orange | red"

                Tip 2: you can also add an image using data-image tag
            -->
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a class="simple-text" asp-action="Index" asp-controller="PhieuMuon">
                        Quản lý thư viện
                    </a>
                </div>
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="PhieuMuon">
                            <i class="nc-icon nc-icon nc-paper-2"></i>
                            <p>Mượn trả sách</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link"asp-action="Index" asp-controller="DauSach">
                            <i class="fas fa-book"></i>
                            <p>Sách</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" asp-action="Index" asp-controller="ChuDe">
                            <i class="far fa-bookmark"></i>
                            <p>Chủ đề</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" asp-action="Index" asp-controller="TacGia">
                            <i class="fas fa-address-book"></i>
                            <p>Tác giả</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" asp-action="Index" asp-controller="NXB">
                            <i class="far fa-address-card"></i>
                            <p>NXB</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" asp-action="Index" asp-controller="LoaiSach">
                            <i class="fas fa-border-style"></i>
                            <p>Loại sách</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" asp-action="Index" asp-controller="KeSach">
                            <i class="fas fa-clipboard-list"></i>
                            <p>Kệ sách</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" asp-action="Index" asp-controller="NgonNgu">
                            <i class="fas fa-language"></i>
                            <p>Ngôn ngữ</p>
                        </a>
                    </li>

                    @*<li class="nav-item  active-pro">
                        <a class="nav-link active" href="javascript:;">
                            <i class="nc-icon nc-alien-33"></i>
                            <p>Upgrade plan</p>
                        </a>
                    </li>*@
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg " color-on-scroll="500">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-action="Index">@ViewData["page"]</a>
                    <button href="" class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <ul class="nav navbar-nav mr-auto">
                            <li class="nav-item">
                                <a href="#" class="nav-link" data-toggle="dropdown">
                                    <i class="nc-icon nc-palette"></i>
                                    <span class="d-lg-none">Dashboard</span>
                                </a>
                            </li>
                            <li class="dropdown nav-item">
                                <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                                    <i class="nc-icon nc-planet"></i>
                                    <span class="notification">5</span>
                                    <span class="d-lg-none">Notification</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <a class="dropdown-item" href="#">Notification 1</a>
                                    <a class="dropdown-item" href="#">Notification 2</a>
                                    <a class="dropdown-item" href="#">Notification 3</a>
                                    <a class="dropdown-item" href="#">Notification 4</a>
                                    <a class="dropdown-item" href="#">Another notification</a>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Index" asp-controller="Home">
                                    <i class="nc-icon nc-bank"></i>
                                    <span class="d-lg-block">&nbsp;Về trang chủ</span>
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item dropdown">
                                @if (this.User.IsInRole("Admin"))
                                {
                                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="no-icon">Mở rộng</span>
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        <a asp-action="Index" asp-controller="SinhVien" class="dropdown-item">Sinh viên</a>
                                        <a asp-action="Index" asp-controller="HocPhan" class="dropdown-item">Học phần</a>
                                        <a asp-action="Index" asp-controller="Khoa" class="dropdown-item ">Khoa</a>
                                        <a asp-action="Index" asp-controller="Nganh" class="dropdown-item">Ngành</a>
                                        <a asp-action="Index" asp-controller="Bomon" class="dropdown-item">Bộ môn</a>
                                        <a asp-action="Index" asp-controller="Lop" class="dropdown-item">Lớp</a>
                                        <div class="divider"></div>
                                        <a class="dropdown-item" asp-page="/User/Index" asp-area="Admin">Tài khoản</a>
                                        <a class="dropdown-item" asp-page="/Role/Index" asp-area="Admin">Quyền</a>
                                        <a class="dropdown-item" asp-controller="DieuKhoan" asp-action="Index">Điều khoản</a>
                                    </div>
                                }
                            </li>
                            <partial name="_LoginPartial"/>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <footer class="footer">
                <div class="container-fluid">
                    <nav>
                        <ul class="footer-menu">
                            <li>
                                <a asp-action="Index" asp-controller="Home">
                                    Trang chủ
                                </a>
                            </li>
                            <li>
                                <a href="https://www.ctuet.edu.vn/">
                                    Trường đại học KT-CN Cần Thơ
                                </a>
                            </li>
                        </ul>
                        <p class="copyright text-center">
                            ©
                            <script>document.write(new Date().getFullYear())</script>
                        </p>
                    </nav>
                </div>
            </footer>
        </div>
    </div>
