@model QLTV.AppMVC.Models.Entities.LoaiSach

@{
    ViewData["Title"] = "Cập nhật thông tin loại sách";
    ViewData["page"] = "Loại sách";
}


<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2>@ViewData["Title"]</h2>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MaLoaiSach" class="control-label"></label>
                <input asp-for="MaLoaiSach" class="form-control" />
                <span asp-validation-for="MaLoaiSach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenLoaiSach" class="control-label"></label>
                <input asp-for="TenLoaiSach" class="form-control" />
                <span asp-validation-for="TenLoaiSach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary float-right" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Trở về danh sách</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
