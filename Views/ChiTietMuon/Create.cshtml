@model QLTV.AppMVC.Models.Entities.ChiTietMuon

@{
    ViewData["title"] = "Thêm chi tiết mượn";
}

<h2>Thêm chi tiết mượn</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" name="Id" value="@ViewBag.Id" />
                <label  asp-for="MaSach" class="control-label"></label>
                <input asp-for="MaSach" type="text" class="form-control" />
                <span asp-validation-for="MaSach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayMuon" class="control-label"></label>
                <input asp-for="NgayMuon" class="form-control" />
                <span asp-validation-for="NgayMuon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Đồng ý" class="btn btn-success float-right" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
