@model QLTV.AppMVC.Models.Entities.HocPhan

@{ 
    ViewData["title"] = "Cập nhật thông tin học phần";
    ViewData["page"] = "Học phần";
  }


<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2>@ViewData["title"]</h2>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MaHocPhan" class="control-label"></label>
                <input asp-for="MaHocPhan" class="form-control" />
                <span asp-validation-for="MaHocPhan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenHocPhan" class="control-label"></label>
                <input asp-for="TenHocPhan" class="form-control" />
                <span asp-validation-for="TenHocPhan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Khoa_Id" class="control-label"></label>
                <select asp-for="Khoa_Id" class="form-control" asp-items="ViewBag.Khoa_Id"></select>
                <span asp-validation-for="Khoa_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary float-right" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Trở về danh sách</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
