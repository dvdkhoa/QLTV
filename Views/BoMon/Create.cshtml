@model QLTV.AppMVC.Models.Entities.BoMon

@{
    ViewData["Title"] = "Thêm mới bộ môn";
    ViewData["page"] = "Bộ môn";
}


<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2>@ViewData["Title"]</h2>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaBoMon" class="control-label"></label>
                <input asp-for="MaBoMon" class="form-control" />
                <span asp-validation-for="MaBoMon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenBoMon" class="control-label"></label>
                <input asp-for="TenBoMon" class="form-control" />
                <span asp-validation-for="TenBoMon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Khoa_Id" class="control-label"></label>
                <select asp-for="Khoa_Id" class="form-control" asp-items="ViewBag.Khoa_Id"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-success float-right" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Trở về danh sách</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
