@model IEnumerable<QLTV.AppMVC.Models.Entities.BoMon>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách bộ môn</h1>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaBoMon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenBoMon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Khoa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaBoMon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenBoMon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Khoa.TenKhoa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
