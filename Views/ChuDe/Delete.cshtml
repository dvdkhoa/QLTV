@model QLTV.AppMVC.Models.Entities.ChuDe

@{
    ViewData["Title"] = "Xóa chủ đề";
    ViewData["page"] = "Chủ đề";
}

<h1>@ViewData["Title"]</h1>
    <hr />

<h3>Bạn có chắc chắn muốn xóa?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaChuDe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaChuDe)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TenChuDe)
