@model QLTV.AppMVC.Models.Entities.Lop

@{
    ViewData["Title"] = "Thêm mới lớp";
    ViewData["page"] = "Lớp";
}


<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2>@ViewData["title"]</h2>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaLop" class="control-label"></label>
                <input asp-for="MaLop" class="form-control" />
                <span asp-validation-for="MaLop" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nganh_Id" class="control-label"></label>
                <select asp-for="Nganh_Id" class="form-control" asp-items="ViewBag.Nganh_Id"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-success float-right" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Trở về danh sách</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
