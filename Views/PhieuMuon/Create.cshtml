@model QLTV.AppMVC.Models.Entities.PhieuMuon

@{
    ViewData["Title"] = "Tạo phiếu mượn";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="masv" class="control-label">Mã sinh viên</label>
                <input type="text" id="masv" name="masv" placeholder="Nhập mã sinh viên" class="form-control" required/>
            </div>
            <div class="form-group">
                <label for="masach" class="control-label">Mã sách</label>
                <input type="text" id="masach" name="masach" placeholder="Nhập mã sách" class="form-control" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Đồng ý" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về danh sách phiếu mượn</a>
</div>

